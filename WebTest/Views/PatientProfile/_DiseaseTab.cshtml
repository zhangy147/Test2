            @Html.LabelFor(model => model.Goals, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Goals, new { @class = "form-control", @rows = "3" })
                @Html.ValidationMessageFor(model => model.Goals)
            </div>
        </div>*@
