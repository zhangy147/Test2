@model WebTest.ViewModels.PatientQuestionViewData
@{
    AjaxOptions options = new AjaxOptions();
    options.HttpMethod = "GET";
    options.OnFailure = "OnAjaxFailure";
    //options.OnBegin = "OnBegin";
    options.OnSuccess = "OnAjaxSuccess";
    options.LoadingElementDuration = 500;
    //options.UpdateTargetId = "uploaded_records_tab";
    options.InsertionMode = InsertionMode.Replace;
}
@using (Ajax.BeginForm("SaveQuestion", "ServiceCenter", options))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @*<div class="form-horizontal">*@
        <div class="form-group">
            @Html.LabelFor(model => model.Question, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Question, new { @class = "form-control", @rows = "10" })
                @Html.ValidationMessageFor(model => model.Question)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
               <button class="btn btn-default">Submit</button>
            </div>
        </div>
    @*</div>*@
}
